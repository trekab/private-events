
    
<div class="row">
  <div class="col-md-6 mx-auto">
    <h3>Create Event</h3>
    <%= form_for(@event,  url: events_new_path) do |f| %>
      <div class = "form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, placeholder: "Enter event title", class: 'form-control' %>
      </div>
      <div class = "form-group">
        <%= f.label :date %>
        <%= f.date_field :date, class: 'form-control' %>
      </div>
      <div class = "form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class = "form-group">
        <%= f.label :venue %>
        <%= f.text_field :venue, class: 'form-control' %>
      </div>
      <%= f.button "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>