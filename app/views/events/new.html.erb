
    <h1>Create Event</h1>        

    <%= form_for(:event) do |f| %>
      
      <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
      <div>

      <div>
        <%= f.label :date %>
        <%= f.date_field :date %>
      <div>

      <div>
        <%= f.label :description %>
        <%= f.text_area :description%>
      <div>
      
      <div>
        <%= f.label :venue %>
        <%= f.text_field :venue %><br />
      <div>
      
      <%= f.submit "Create Event" %>
    <% end %>